<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bullet"
        android:layout_marginRight="@dimen/margin_between_text_big"
        android:textSize="@dimen/text_size_dot_wizard"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/list_item_wizard_ingredient_quantity"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_between_text"
        android:text="2 CUP"
        android:textSize="@dimen/text_size_ingredient_wizard"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/list_item_wizard_ingredient_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graham Cracker crumbs"
        android:textSize="@dimen/text_size_ingredient_wizard"
        android:textColor="@android:color/black"/>

</LinearLayout>